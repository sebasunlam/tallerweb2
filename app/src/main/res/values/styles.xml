<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/OpenMlActionBar</item>
        <item name="imageButtonStyle">
            @style/ImgButton
        </item>
        <!--<item name="editTextStyle">@style/EditTextOpenMl</item>-->
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="ImgButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:tint">@color/primary_text</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="OpenMlActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/primary</item>
        <item name="elevation">5dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>



    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="EditTextOpenMl" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="AlertDialogOpenMl" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/primary</item>
        <item name="android:windowTitleStyle">@style/DialogTitleText</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

</resources>
